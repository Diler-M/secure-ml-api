terraform {
  required_version = ">= 1.6.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.60"
    }
  }
}

provider "aws" {
  region = var.region
}

# Identities/metadata used in policies
data "aws_caller_identity" "current" {}
data "aws_region" "current" {}